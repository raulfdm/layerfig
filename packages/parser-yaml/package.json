{
	"name": "@layerfig/parser-yaml",
	"description": "Source parser for .yaml and .yml config files",
	"version": "5.0.0-next.2",
	"keywords": [
		"@layerfig/config",
		"source",
		"parser"
	],
	"license": "MIT",
	"author": "Raul Melo <contact@raulmelo.me>",
	"repository": {
		"type": "git",
		"url": "https://github.com/raulfdm/layerfig.git",
		"directory": "pacakges/config"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"LICENSE"
	],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"prepack": "bun turbo build --output-logs=errors-only",
		"build": "tsdown",
		"check-types": "tsc",
		"test": "vitest --typecheck"
	},
	"peerDependencies": {
		"@layerfig/config": "^2.0.0 || ^2.0.0-next.0"
	},
	"dependencies": {
		"yaml": "^2.8.0"
	},
	"devDependencies": {
		"@layerfig/config": "workspace:*",
		"@types/bun": "1.2.18",
		"tsdown": "0.12.9",
		"typescript": "5.8.3",
		"vitest": "3.2.4",
		"zod": "3.25.67"
	}
}
