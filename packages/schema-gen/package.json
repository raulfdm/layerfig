{
	"name": "@layerfig/schema-gen",
	"description": "Generate JSON Schema and TypeScript types from Layerfig schemas.",
	"version": "0.1.0",
	"type": "module",
	"keywords": [
		"json-schema",
		"codegen",
		"typescript",
		"cli",
		"layerfig",
		"configuration",
		"schema",
		"types",
		"intellisense"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/raulfdm/layerfig.git",
		"directory": "pacakges/schema"
	},
	"author": "Raul Melo <contact@raulmelo.me>",
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"layerfig": "./bin/index.js"
	},
	"files": [
		"dist",
		"bin",
		"LICENSE"
