{
	"name": "@layerfig/config",
	"description": "Layer and runtime-validate type-safe configs for JavaScript apps.",
	"version": "3.0.0-next.0",
	"keywords": [
		"configuration",
		"layered",
		"config",
		"javascript",
		"typescript",
		"schema",
		"validation",
		"runtime",
		"env"
	],
	"license": "MIT",
	"author": "Raul Melo <contact@raulmelo.me>",
	"repository": {
		"type": "git",
		"url": "https://github.com/raulfdm/layerfig.git",
		"directory": "pacakges/config"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"files": [
		"dist",
		"LICENSE"
	],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./client": {
			"import": {
				"types": "./dist/client.d.ts",
				"default": "./dist/client.js"
			}
		},
		"./zod": {
			"import": {
				"types": "./dist/zod.d.ts",
				"default": "./dist/zod.js"
			},
			"require": {
				"types": "./dist/zod.d.cts",
				"default": "./dist/zod.cjs"
			}
		},
		"./zod-mini": {
			"import": {
				"types": "./dist/zod-mini.d.ts",
				"default": "./dist/zod-mini.js"
			},
			"require": {
				"types": "./dist/zod-mini.d.cts",
				"default": "./dist/zod-mini.cjs"
			}
		}
	},
	"scripts": {
		"prepack": "bun turbo build --output-logs=errors-only",
		"build": "tsdown",
		"check-types": "tsc",
		"check-exports": "bun run check-exports:server && bun run check-exports:client",
		"check-exports:server": "attw --pack --profile node16 --exclude-entrypoints client ",
		"check-exports:client": "attw --pack --profile esm-only --entrypoints client",
		"test": "vitest --typecheck",
		"test:coverage": "bun run test --coverage --coverage.exclude src/__fixtures__ --coverage.include src"
	},
	"dependencies": {
		"zod": "^4.0.10"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "0.18.2",
		"@types/bun": "1.2.19",
		"@vitest/coverage-v8": "3.2.4",
		"tsdown": "0.12.9",
		"typescript": "^5.9.0-beta",
		"vitest": "3.2.4"
	}
}
