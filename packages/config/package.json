{
	"name": "@layerfig/config",
	"description": "Layer and runtime-validate type-safe configs for JavaScript apps.",
	"version": "0.0.2",
	"keywords": [
		"configuration",
		"layered",
		"config",
		"javascript",
		"typescript",
		"schema",
		"validation",
		"runtime",
		"env"
	],
	"license": "MIT",
	"author": "Raul Melo <contact@raulmelo.me>",
	"repository": {
		"type": "git",
		"url": "https://github.com/raulfdm/layerfig.git",
		"directory": "pacakges/config"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"LICENSE"
	],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"publish": "bun publish",
		"build": "tsdown",
		"check-exports": "attw --pack . --profile node16",
		"check-types": "tsc",
		"test": "bun test"
	},
	"peerDependencies": {
		"zod": "^3.25.0"
	},
	"dependencies": {
		"json5": "2.2.3",
		"lodash-es": "4.17.21",
		"yaml": "2.8.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "0.18.1",
		"@types/bun": "1.2.15",
		"@types/lodash-es": "4.17.12",
		"tsdown": "0.12.7",
		"typescript": "5.8.3",
		"zod": "3.25.67"
	}
}
