{
	"$schema": "./node_modules/turbo/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types", "^build"]
		},
		"check-exports": {},
		"test": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	},
	"globalEnv": ["NPM_TOKEN"]
}
