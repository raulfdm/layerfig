---
import { Code, TabItem, Tabs } from "@astrojs/starlight/components";

interface Tab {
	label: string;
	baseCommand: string;
}

const tabs: Tab[] = [
	{
		label: "npm",
		baseCommand: "npm install",
	},
	{
		label: "yarn",
		baseCommand: "yarn add",
	},
	{
		label: "bun",
		baseCommand: "bun install",
	},
	{
		label: "pnpm",
		baseCommand: "pnpm add",
	},
];
---

<Tabs>
    {tabs.map(tab => <TabItem label={tab.label}>
        <Code  code={`${tab.baseCommand} zod@^3.25.0 @layerfig/config`} lang="shell"/>
    </TabItem>)}
</Tabs>
