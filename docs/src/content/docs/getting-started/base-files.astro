---
import { TabItem, Tabs } from "@astrojs/starlight/components";
import { Code } from "starlight-theme-nova/components";

interface Tab {
	label: string;
	code: string;
	language: "ts" | "json";
}

const tabs: Tab[] = [
	{
		label: "index.ts",
		language: "ts",
		code: `import { ConfigBuilder } from "@layerfig/config";
import { FileSource } from "@layerfig/config/sources/file";

export const config = new ConfigBuilder({
  validate: (finalConfig, z) =>
    z.object({
        appURL: z.url(),
        port: z.coerce.number().int().int().positive(),
      })
      .parse(finalConfig),
})
  .addSource(new FileSource("base.json"))
  .addSource(new FileSource("live.json"))
  .build();

`,
	},
	{
		label: "base.json",
		language: "json",
		code: `{
  "appURL": "http://localhost:3000",
  "port": 3000
}`,
	},
	{
		label: "live.json",
		language: "json",
		code: `{
  "appURL": "https://live.my-app.company"
}`,
	},
];
---

<Tabs>
  {
    tabs.map((tab) => (
      <TabItem label={tab.label}>
        <Code code={tab.code} lang={tab.language} />
      </TabItem>
    ))
  }
</Tabs>
