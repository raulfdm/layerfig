---
import { Code, TabItem, Tabs } from "@astrojs/starlight/components";

interface Props {
	npm: string;
	pnpm: string;
	bun: string;
	yarn: string;
}

const tabs = [
	["npm", Astro.props.npm],
	["pnpm", Astro.props.pnpm],
	["bun", Astro.props.bun],
	["yarn", Astro.props.yarn],
];
---

<Tabs>
    {tabs.map(([tabName, command]) => <TabItem label={tabName}>
        <Code  code={command} lang="shell"/>
    </TabItem>)}
</Tabs>
