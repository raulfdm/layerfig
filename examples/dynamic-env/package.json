{
  "name": "dynamic-env",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env APP_ENV=local node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "preview": "cross-env NODE_ENV=production APP_ENV=prod node server"
  },
  "dependencies": {
    "@layerfig/config": "2.1.0",
    "compression": "1.8.0",
    "express": "5.1.0",
    "sirv": "3.0.1"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/node": "22.13.4",
    "cross-env": "7.0.3",
    "typescript": "5.8.3",
    "vite": "7.0.2"
  }
}
